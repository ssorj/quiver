from plano import *

def main():
    enable_logging("warn")

    call("quiver q0 --quiet --init-only", quiet=True)
    call("quiver-arrow send //localhost:12345/a/b/c --init-only", quiet=True)
    call("quiver-server q0 --init-only", quiet=True)

    with temp_working_dir() as d:
        call("quiver-bench --init-only --output {}", d, quiet=True)

if __name__ == "__main__":
    try:
        main()
    except KeyboardInterrupt:
        pass
